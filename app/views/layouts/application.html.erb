<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeEcommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <main class="w-full mx-auto p-4">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= render partial: "cart/cart" if @render_cart%>

      <%= link_to "Home", root_path , class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"%>

      <% if current_user %>
        <%= "Welcome, #{current_user.email} !"  %>
        <%= link_to "Admin Panel", admin_root_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <%#= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
        <%#= link_to "Log out", destroy_user_session_path, 'data-turbo-method': :delete %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <% else %>
        <%= link_to "Register", new_user_registration_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Log in", new_user_session_path, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
